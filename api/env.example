# Database Configuration (Neon Postgres)
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# S3-Compatible Storage (Cloudflare R2 or AWS S3)
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_REGION=auto
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=claverum-uploads

# Public S3 URL (for accessing uploaded files)
S3_PUBLIC_URL=https://your-bucket.r2.dev

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=https://bauklar.org # Production frontend URL (also used for redirects)

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_... # Secret Key from Stripe Dashboard (Developers > API keys)
STRIPE_WEBHOOK_SECRET=whsec_... # Webhook Signing Secret (Webhooks > Add endpoint > Signing secret)
STRIPE_PRICE_ID=price_... # Price ID from Products (Products > Create product > Copy Price ID)

# Email Configuration (Resend)
RESEND_API_KEY=re_xxx... # Resend API Key from Resend Dashboard (API Keys section)
CONTACT_EMAIL=kontakt@bauklar.org # Email address to receive contact form messages (must be verified in Resend)

